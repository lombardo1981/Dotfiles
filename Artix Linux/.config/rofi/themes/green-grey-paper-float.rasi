configuration {

    display-ssh:			"";
    display-run:			"";
    display-drun:			"";
    display-window:		"";
    display-windowcd:		"";
    display-calc:			"";
    display-top:			"";
    display-keys:			"";
    display-combi:			"";
    show-icons: false;
}

* {
    foreground:  #4f6571;
    light-foreground: #3b4a53;
    background: #303d44;
    border-color: #303d44;
    text-color: #3b4a53;
    blue:  	#5994ad;

    spacing: 2;
    background-color: #00000000;
    transparency: "screenshot";
    anchor: center;
    location: center;
    font: "Iosevka Nerd Font 12";
}
window {
    transparency: "screenshot";
    background-color: #00000000;
    padding: 0 0 0.5em 0;
    x-offset: 0;
    y-offset: -10%;
    children: [ windowborder ];
}
windowborder {
    border: 4;
    border-color:	@border-color;
    children: [ mainbox ];
}
mainbox {
    spacing: 3;
    padding: 0;
    border: 3;
    border-color:	@background-color;
}
message {
    border: 3;
    padding: 1em;
    background-color: @background;
    text-color: @foreground;
}
textbox normal {
    text-color: @foreground;
    padding: 0;
}
listview {
    reverse: false;
    fixed-height: true;
    border: 2;
    padding: 10;
    columns: 1;
    text-color: @foreground;
    background-color: @background;
}
element {
    padding: 4 0 4 8;
    highlight: bold underline;
}
element selected {
    border: 1;
    border-color:	@light-foreground;
    text-color: @foreground;
    background-color: @background;
}
scrollbar {
    border: 0;
    padding: 0;
}
inputbar {
    spacing: 0;
    border: 2;
    padding: 10 10 10 18;
    text-color: @foreground;
    background-color: @background;
    index: 0;
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
}
inputbar normal {
    text-color: @foreground;
    background-color: @background;
}

mode-switcher {
    border: 2;
    padding: 10 20;
    text-color: @foreground;
    background-color: @background;
    index: 10;
}
button {
    text-color: @light-foreground;
    background-color: @background;
    font: "FontAwesome 17";
}
button selected {
    text-color: @foreground;
    background-color: @background;
}
prompt {
    spacing:    0;
    background-color: @background;
    text-color: @foreground;
}
textbox-prompt-colon {
    expand:     false;
    margin:     0 1em 0 0;
    text-color: @foreground;
}
entry {
    spacing: 0;
    text-color: @foreground;
    background-color: @background;
    font: "Iosevka Nerd Font Bold 12";
}
case-indicator {
    spacing:    0;
    text-color: @normal-foreground;
    background-color: @background;
}

error-message {
    border: 2;
    padding: 1em;
    background-color: @background;
    text-color: @foreground;
}

