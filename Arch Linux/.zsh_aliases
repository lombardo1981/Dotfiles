function eac3-low() {
    for i in *.ac3 ; do 
	ffmpeg -i "$i" -b:a 640k "$(basename "${i/.ac3}")".eac3
	sleep 1
    done
}

function eac3() {
    for i in *.dts ; do 
	ffmpeg -i "$i" -b:a 640k "$(basename "${i/.dts}")".eac3
	sleep 1
    done
}

function eac3-high() {
    for i in *.dts ; do 
	ffmpeg -i "$i" -b:a 1920k "$(basename "${i/.dts}")".eac3
	sleep 1
    done
}

