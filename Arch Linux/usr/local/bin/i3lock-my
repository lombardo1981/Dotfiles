#!/bin/sh

TRANS='00000000'
BLANK='#2e3440'
CLEAR='#434c5e'
DEFAULT='#d9eceff4'
TEXT='#d9eceff4'
WRONG='#d9eceff4'
VERIFYING='#d9eceff4'

i3lock \
--insidever-color=$DEFAULT     \
--ringver-color=$VERIFYING   \
\
--insidewrong-color=$DEFAULT   \
--ringwrong-color=$WRONG     \
\
--inside-color=$BLANK        \
--ring-color=$CLEAR        \
--line-color=$BLANK          \
--separator-color=$DEFAULT   \
\
--verif-color=$CLEAR          \
--wrong-color=$CLEAR          \
--time-color=$TEXT           \
--date-color=$TEXT           \
--greeter-color=$TEXT           \
--layout-color=$TEXT         \
--keyhl-color=$WRONG         \
--bshl-color=$WRONG          \
\
--screen 1                   \
--blur 5                     \
--ring-width 2		\
--clock                      \
--indicator                  \
--time-str="%H:%M:%S"        \
--date-str="%A, %m %Y"       \
--greeter-text="In the long run we are all dead."		\
--verif-text="Overovanie…"			\
--wrong-text="Nesprávne!"			\
--noinput-text="Žiadne znaky."		\
--lock-text="Uzamykanie..."			\
--lockfailed-text="Zlyhanie!"		\
--greeter-pos="982:700"			\
--greeter-font="Hack-Regular"		\
--time-font="Hack-Regular"		\
--date-font="Hack-Regular"		\
--verif-font="Hack-Regular"		\
--wrong-font="Hack-Regular"		\
--layout-font="Hack-Regular"		\
--greeter-size="27"		\
--time-size="25"		\
--date-size="14"		\
--verif-size="20"		\
--wrong-size="20"		\
--layout-size="18"		\






